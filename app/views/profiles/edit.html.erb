<!-- profile edit page, on sign-up -->

<div id="site-header">
	<div id="logo-home-link">
		<a href="/"><span 
								 style="color:#EBC805">Yellow</span><span 
								 style="color:red">red</span><span 
								 style="color:#068A19"><span 
								 style="font-size:14pt"><sub>&hearts;</sub></span>me</span></a>
	</div>
	
	<div id="current-user-thumbnail-utility">
			Welcome, <%= current_user.email.split('@')[0] %>!
			<%= button_to "Log Out", session_url, :method => :delete %>
	</div>
</div>

<div id="all-content">
	
	<div id="left-sidebar">
		<div id="heart-you">
			<sub>&hearts;</sub>me
		</div>
	</div>
	
	<div id="central-content">
		<form action="<%= profile_url %>" method="get" id="profile-edit-form" accept-charset="utf-8">
			<input type="hidden" name="_method" value="PUT">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			
		<div id="username-and-seeking">
			<label for="profile_username">Username</label>
			<input type="text" name="profile[username]" value="<%= @profile.username %>" id="profile_username">
			
			<label for="profile_gender">Gender</label>
			<select name="profile[gender]" id="profile_gender">
				<option value="option2"></option>
				<option value="option1">male</option>
				<option value="option2">female</option>
				<option value="option2">genderqueer/nonbinary</option>
			</select><br><br>
			
			<div class="profile-checkbox-group">
				Looking for:<br>
					<div class="profile-checkbox-group">
						<input type="checkbox" name="profile[friends_wanted]" value="true">Friends<br>
						<input type="checkbox" name="profile[dating_wanted]" value="true">Dating<br>
						<input type="checkbox" name="profile[hookups_wanted]" value="true">Hookups<br>	
					</div>
			</div>
			
			<div class="profile-checkbox-group">
				Interested in:<br>
					<div class="profile-checkbox-group">
						<input type="checkbox" name="profile[men_wanted]" value="true">Men<br>
						<input type="checkbox" name="profile[women_wanted]" value="true">Women<br>
						<input type="checkbox" name="profile[nonbinary_wanted]" value="true">Genderqueer/Nonbinary folks<br>	
					</div>
			</div>
		</div>
		<hr>
		<div id="about-me">
			<label for="profile_about_me">About me:</label><br>
			<textarea name="profile[about_me]" id="profile_about_me" rows="10" cols="43"></textarea>
		</div>
		
		<div id="my-stats">
			My Stats:<br>
			<label for="profile_height">Height</label>
			<select name="profile[height]" id="profile_height">
				<option value=""></option>
				<% (58..84).each do |height_inches| %>
				<% hieght_feet_inches = height_inches.divmod(12) %>
			    <option value="<%= height_inches %>"><%=hieght_feet_inches[0]%>' <%=hieght_feet_inches[1]%>"</option>
				<% end %>				
			</select><br>
			
			<label for="profile_body_type">Body Type</label>
			<select name="profile[body_type]" id="profile_body_type">
				<option value=""></option>
				<% options = %w( skinny lean average athletic soft chubby heavy) %>
				<% options.each do |option| %>
			    <option value="<%= option %>"><%= option %></option>
				<% end %>				
			</select><br>
			
			<label for="profile_religion">Religion</label>
			<select name="profile[religion]" id="profile_religion">
				<option value=""></option>
				<% options = %w( none Jehovah Yaweh Allah Buddhist Hindu FSM other ) %>
				<% options.each do |option| %>
			    <option value="<%= option %>"><%= option %></option>
				<% end %>				
			</select><br>
			
			<label for="profile_education">Education</label>
			<select name="profile[education]" id="profile_education">
				<option value=""></option>
				<% options = %w( some\ high\ school high\ school college masters PhD MD ) %>
				<% options.each do |option| %>
			    <option value="<%= option %>"><%= option %></option>
				<% end %>				
			</select><br>
			
			<label for="profile_children">Kids?</label>
			<select name="profile[children]" id="profile_children">
				<option value=""></option>
				<% options = %w( have\ kids have\ kids&\ want\ more want\ kids don't\ want\ kids ) %>
				<% options.each do |option| %>
			    <option value="<%= option %>"><%= option %></option>
				<% end %>				
			</select><br>
			
			<label for="profile_pets">Pets?</label>
			<select name="profile[pets]" id="profile_pets">
				<option value=""></option>
				<% options = %w( cats dogs ball\ pythons bearded\ dragons fish other ) %>
				<% options.each do |option| %>
			    <option value="<%= option %>"><%= option %></option>
				<% end %>				
			</select><br>
		</div>
			<div style="float:right"><input type="submit" value="Save Profile"></div>
		</form>
	</div>
	
	<div id="right-sidebar">
		<div id="yellow-box">
			I'm in the yellow box
		</div>
		
		<div id="red-box">
			I'm in the red box
		</div>
	</div>
	
</div>