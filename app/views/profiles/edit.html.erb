<div id="site-header">
	<div id="logo-home-link">
		<a href="/"><span 
								 style="color:#EBC805">Yellow</span><span 
								 style="color:red">red</span><span 
								 style="color:#068A19"><span 
								 style="font-size:14pt"><sub>&hearts;</sub></span>me</span></a>
	</div>
	
	<div id="current-user-thumbnail-utility">
			Welcome, <%= current_user.email.split('@')[0] %>!
			<%= button_to "Log Out", session_url, :method => :delete %>
	</div>
</div>

<div id="all-content">
	
	<div id="left-sidebar">
		<div id="heart-you"><sub>&hearts;</sub>me</div>
	</div>
	
	<div id="central-content">
		
		<form action="<%= profile_url %>" method="get" accept-charset="utf-8">
			<input type="hidden" name="_method" value="PUT">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	
			<label for="profile_username">Username</label>
			<input type="text" name="profile[username]" value="<%= @profile.username %>" id="profile_username">
	
	

			<p><input type="submit" value="Edit Profile"></p>
		</form>
		
	</div>
	
	<div id="right-sidebar">
		<div id="yellow-box">
			I'm in the yellow box
		</div>
		
		<div id="red-box">
			I'm in the red box
		</div>
	</div>
	
</div>